{
  "scopeName": "source.gamescript",
  "name": "GameScript",
  "fileTypes": ["gs"],

  "patterns": [
    {
      "name": "comment.line.double-slash.gamescript",
      "match": "//.*$"
    },
    {
      "name": "comment.block.gamescript",
      "begin": "/\\*",
      "end": "\\*/"
    },

    {
      "name": "string.quoted.double.gamescript",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        { "name": "constant.character.escape.gamescript", "match": "\\\\." }
      ]
    },

    {
      "name": "constant.numeric.gamescript",
      "match": "\\b[0-9]+\\b"
    },

    {
      "name": "keyword.control.gamescript",
      "match": "\\b(wait|on|if|else|for|while|do|switch|case|default|break|continue|return|goto|thread)\\b"
    },
    {
      "name": "keyword.declaration.gamescript",
      "match": "\\b(game|include|class|isclass|define|native|final|static|public|private|protected|obsolete)\\b"
    },
    {
      "name": "storage.type.gamescript",
      "match": "\\b(void|int|float|double|string|char|bool|object)\\b"
    },
    {
      "name": "constant.language.gamescript",
      "match": "\\b(true|false|null|me)\\b"
    },
    {
      "name": "keyword.operator.gamescript",
      "match": "\\b(and|or|not|inherited|new|cast)\\b"
    },

    {
      "name": "entity.name.type.class.gamescript",
      "match": "\\b(NamedObjectInfo|AssetCategory|AsyncObjectSearchResult|ScenarioBehavior|MeshObject|GameObjectID|Interface|Soup|Asset|DriverCommand|CustomCommand|DriverCommands|DriverScheduleCommand|DriverCustomCommand|DriverCharacter|Menu|Train|World|MapObject|Permit|GSTrackSearch|Message|StringTable|GameObject|SessionVariables|Vehicle|Signal|Junction|Trackside|Crossing|Library|LinkedList|Locomotive|Image|KUIDList|RoutesMenuSettingsLibrary|GameplayMenu|RankingsLib|SecurityToken|MultiplayerLobbyLibrary|AsyncTrainzAssetSearchObject|HTMLWindow|HTMLBuffer|HTMLBufferStatic|CabinData|CabinControl|ControlSettingsManager|Router|DefaultLocomotiveCabin|Industry|Browser|TrainzAssetSearch|Constructors)\\b"
    },

    {
      "name": "entity.name.function.gamescript",
      "match": "\\b(GetGameObject|GetNamedObjectList|SetStateFlags|GetDescriptionHTML|Pause|IsPaused|IsComplete|SetComplete|GetChildRelationshipIcon|GetTrainDisplayName|GetDirectionToTrain|BeginTrackSearch|TrackSearch|DoesMatch|GetNamedTagAsBool|GetNamedSoup|FindAsset|LibraryCall|Execute|Init|Sleep|Log|Print|Rand|Abs|Fmin|Fmax|Fabs|ToInt|ToUpper|ToLower|ToFloat|ToString|AsString|Sniff|PostMessage|SendMessage|AddHandler|NewMenu|Construct|Escape|ReEnter|MakeLink|MakeRow|MakeCell|StartTable|EndTable|SwapTextureOnMesh|StartMeshAnimationLoop|StopMeshAnimation|PlaySound|UserSetControl|UserPressKey|Attach|LoadDriverSession|LoadMenu|LoadRailyard|DeleteSession|DeleteMap|Exception|SearchNext|GetFXAttachment|GetSignalOwner|GetTrainPriorityNumber|GetString|GetString1|GetString2|GetString3|GetString4|GetString5|GetString6|GetString7|GetString8|GetString9|GetString10|GetLastVisitedIndustry|GetDCCThrottle|GetAutopilotMode|GetDriverCharacter|GetDriverScheduleRepeat|GetDriverCommand|GetDriverCommandList|GetNamedTagAsKUID|GetLogString|GetDriverScheduleCommands|GetPantographState|GetTooltip|GetIcon|GetLibrary|GetMeshAnimationFrameCount|GetHeadlightState|GetRollBasedOnTrack|GetTrainzVersion|GetTrainzBuild|GetGameObjectID|GetCurrentTrain|GetNamedTagAsFloat|GetCrossingList|GetTriggerList|GetTrainList|GetSignalList|GetDebugName|GetLocalisedName|GetAssetList|GetConfigSoup|GetDependencyList|GetInfoURL|GetIsFavorite|GetHumanReadableCategoryRegion|GetHasIncompletePrerequisites|GetCategoryEra|GetSessionRuleData|GetIsMissingDependencies|GetIsFaulty|GetCategoryClass|GetDateInstalled|GetCategoryRegion|GetLocalisedPaywarePrice|GetLocalisedDescription|GetEngineSetting|GetResults|GetDistance|GetCurrentModule|GetNamedControl|GetDirectionRelativeToTrain|GetGameTime|GetOdometerDistance|GetTripMeterDistance|GetVariableString|GetAsset|GetEngineParam|GetSmoothedVelocity|GetVelocity|GetStringTable|GetBaseString|GetVehicles|GetTrainVelocity|GetMyTrain|GetFrontmostLocomotive|GetTrain|GetNamedTag|GetNamedTagAsInt|GetJunctionList|GetName|GetMapObject|GetFacingRelativeToSearchDirection|GetSignalState|GetProperties|GetPropertyType|GetPropertyValue|GetPropertyName|GetPropertyDescription|GetPropertyElementList|SetEngineSetting|SetParent|SetDCCThrottle|SetAutopilotMode|SetDriverCharacter|SetDriverScheduleRepeat|SetPantographState|SetHandBrake|SetSignalStateEx|SetIsFavorite|SetSignalState|SetFXTextureReplacement|SetTextureSelfIllumination|SetCabLightIntensity|SetValue|SetCabinData|SetLocked|SetFXNameText|SetTripMeterDistance|SetMeshAnimationFrame|SetMeshAnimationState|SetDirection|SetSpeedLimit|SetFXCoronaTexture|SetFXAttachment|SetNamedSoup|SetNamedTag|SetMeshVisible|SetSignalState|SetProperties|SetPropertyValue|AddHandler|AddItem|AddSubmenu|AddDriverCommand|AddDriverScheduleCommand|AddKUID|AddControl|AddCommandMenuItem|AddDriverScheduleCommand|LinkPropertyValue|CheckBox)\\b"
    },

    {
      "name": "constant.define.gamescript",
      "match": "\\b(PAUSED|DIRECTION_LEFT|DIRECTION_FORWARD|DIRECTION_RIGHT|DIRECTION_BACKWARD|DIRECTION_NONE|CONTROL_AUTOPILOT|CONTROL_SCRIPT|DRIVER_MODULE|SURVEYOR_MODULE|LOAD_COMMAND|NAVSTLYE_AUTO|NAVSTLYE_MANUAL|NAVMODE_SEQUENTIAL|NAVMODE_NON_SEQUENTIAL|NAVMODE_SEQUENTIAL_SKIP|RED|GREEN|YELLOW|AUTOMATIC|EX_STOP|EX_PROCEED|EX_CAUTION|MESSAGE_BROADCAST)\\b"
    }
  ]
}
